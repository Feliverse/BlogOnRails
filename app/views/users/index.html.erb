<h2>Blogers on Rails</h2>
<ul>
  <% @users.each do |user| %>
    <li> 
      <div>
        <%= link_to user_avatar(user.photo), user_path(user), class: 'user-image' %> 
      <div>
        <p> <%= link_to user.name, user_path(user) %> </p>
        <p> Number of posts: <%= link_to user.post_counter, user_path(user) %> </p>
      </div>
    </li>
  <% end %>
