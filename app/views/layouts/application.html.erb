<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="d-flex justify-content-between">
      <%= link_to root_path do %>
        <%= image_tag "OIP.jpeg", class: "img-thumbnail", style: "width: 140px; height: 100px;" %>
      <% end %>
      <h1 class="align-self-center"> BlogOnRails </h1>
      <div class="d-flex justify-content-center">
        <% if user_signed_in? %>
          <%= link_to "+ New Post", new_user_post_path(current_user), class: "btn btn-success m-2", style: "height: 2.5rem" %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary m-2", style: "height: 2.5rem" %>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger m-2", style: "height: 2.5rem" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary m-2", style: "height: 2.5rem" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success m-2", style: "height: 2.5rem" %>
        <% end %>
      </div>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>

